{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "$/*": ["./*"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "incremental": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "eslint.config.js",
    "vite.config.mts",
    "aspida.config.mjs",
    "scripts/config.common.mjs",
    "scripts/build.prod.mjs",
    "scripts/build.dev.mjs"
  ],
  "exclude": ["node_modules"]
}
